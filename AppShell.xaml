<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tsundoku.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Tsundoku.Views"
    Title="Tsundoku"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Certificates" Icon="award_plain.png">
            <ShellContent
                Title="Certificates"
                ContentTemplate="{DataTemplate views:CertificatePageView}"
                Route="CertificatePage" />
        </Tab>
        <Tab Title="Stack" Icon="book_stack_plain.png">
            <ShellContent
                Title="Stack"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Register" Icon="register.png">
            <ShellContent
                Title="Register"
                ContentTemplate="{DataTemplate views:RegisterPageView}"
                Route="RegisterPage" />
        </Tab>
    </TabBar>

</Shell>
