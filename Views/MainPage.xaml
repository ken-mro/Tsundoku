<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tsundoku.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Tsundoku.Models"
    xmlns:viewmodels="clr-namespace:Tsundoku.ViewModels"
    Title="Stack"
    x:DataType="viewmodels:MainPageViewModel">

    <Grid Padding="5" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="{Binding BooksInStackCount, StringFormat='{}{0} book(s) in the stack'}"
            VerticalOptions="Center" />
        <RefreshView
            Grid.Row="1"
            Command="{Binding RefreshCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            <CollectionView
                x:Name="collectionView"
                Background="AntiqueWhite"
                ItemsSource="{Binding BooksInStack}"
                VerticalOptions="FillAndExpand">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="5" Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontFamily="craftmincho"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            Text="How to use this app"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Label
                            FontFamily="craftmincho"
                            FontSize="Medium"
                            HorizontalOptions="Start"
                            LineBreakMode="WordWrap"
                            Text="1.To stack books, go to Register page and register books."
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Label
                            FontFamily="craftmincho"
                            FontSize="Medium"
                            HorizontalOptions="Start"
                            LineBreakMode="WordWrap"
                            Text="2. To see the stack books, back to Stack page and pull down to refresh."
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Label
                            FontFamily="craftmincho"
                            FontSize="Medium"
                            HorizontalOptions="Start"
                            LineBreakMode="WordWrap"
                            Text="3. When you've read a book, swiping left the book and tap the tick icon in it. The certificate of your completion of this book is issued."
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Label
                            FontFamily="craftmincho"
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            LineBreakMode="WordWrap"
                            Text="4. To see the certificates, go to Certificate page and pull down to refresh."
                            TextColor="Black"
                            VerticalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type models:Book}">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItem
                                    BackgroundColor="LightGreen"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, Path=ReadBookCommand}"
                                    CommandParameter="{Binding .}"
                                    IconImageSource="check.png"
                                    Text="Read" />
                            </SwipeView.RightItems>
                            <SwipeView.LeftItems>
                                <SwipeItem
                                    BackgroundColor="OrangeRed"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, Path=DeleteBookCommand}"
                                    CommandParameter="{Binding .}"
                                    IconImageSource="trash.png"
                                    Text="Delete" />
                            </SwipeView.LeftItems>

                            <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                BorderColor="Transparent">
                                <Border
                                    BackgroundColor="{Binding Color}"
                                    Stroke="Black"
                                    StrokeShape="Rectangle"
                                    StrokeThickness="2">
                                    <Grid
                                        Padding="30,0"
                                        ColumnSpacing="10"
                                        VerticalOptions="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="50" />
                                        </Grid.ColumnDefinitions>
                                        <BoxView
                                            Grid.Column="0"
                                            BackgroundColor="Transparent"
                                            CornerRadius="90"
                                            HorizontalOptions="Center"
                                            Opacity="50"
                                            WidthRequest="8"
                                            Color="Black" />
                                        <Image
                                            Grid.Column="1"
                                            Margin="-15"
                                            HeightRequest="110"
                                            HorizontalOptions="Center"
                                            Rotation="-90"
                                            VerticalOptions="Center">
                                            <Image.Source>
                                                <UriImageSource
                                                    CacheValidity="30"
                                                    CachingEnabled="True"
                                                    Uri="{Binding SmallImageUrl}" />
                                            </Image.Source>
                                        </Image>
                                        <BoxView
                                            Grid.Column="2"
                                            BackgroundColor="White"
                                            WidthRequest="20" />
                                        <Label
                                            Grid.Column="2"
                                            FontSize="8"
                                            HorizontalOptions="Center"
                                            LineBreakMode="NoWrap"
                                            Rotation="-90"
                                            Text="{Binding Isbn10}"
                                            TextColor="Black"
                                            VerticalOptions="CenterAndExpand" />
                                    </Grid>
                                </Border>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
