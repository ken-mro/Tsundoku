<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tsundoku.Views.RegisterPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Tsundoku.ViewModels"
    Title="Register"
    x:DataType="viewmodels:RegisterPageViewModel">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <VerticalStackLayout Grid.Row="1" Spacing="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Entry
                    Placeholder="Type ISBN Code"
                    Text="{Binding Isbn}"
                    VerticalOptions="EndAndExpand" />
                <Button
                    Grid.Column="1"
                    Command="{Binding SearchCommand}"
                    Text="Search" />
            </Grid>
            <Button
                Command="{Binding NavigateToCameraPageCommand}"
                Text="Scan"
                VerticalOptions="EndAndExpand" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>